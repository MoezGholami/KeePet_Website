<!DOCTYPE html>
<html>
  <head>
    <title>KeePet</title>
    <link rel='stylesheet' href='/stylesheets/owner.css' />
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous">
    </script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"></link>
  </head>
  <body>
    
    <div class="row" id="title">
      <table id="owned_streams" class="table">
        <tr>
          <th width="15%">
            <h1>KeePet</h1>
          </th>
          <th width="20%">
            <p id="subtitle">Your pet is always loved</p>
          </th>
          <th width="70%"></th>
        </tr>
      </table>
    </div>
    
    <nav class="navbar navbar-default">
      <div class="container-fluid" id="bar">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">I'm a pet owner <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/keeper">I'm a pet keeper</a></li>
            </ul>
          </li>
          <li><a href="/owner/new_job_post">Post a Request</a></li>
        </ul>
        <form class="navbar-form navbar-left" action="/owner" method="POST">
          <div class="form-group">
            <div class="input-group input-group-md">
              <span class="input-group-addon glyphicon glyphicon-search" id="sizing-addon1"></span>
              <input type="text" class="form-control" name="key" placeholder="Insert breed of your pet" id="breedinput">
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Find keeper</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <% if(!currentUser) { %>
            <li><a href="/register">Register</a></li>
            <li><a href="/auth/google">Login</a></li>
          <% } else { %>
            <li><a href="/manage">Manage account</a></li>
            <li><a href="/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row" style="display:flex; flex-wrap: wrap;">
        <% allKeeperPosts.forEach(function(post) { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= post.image %>" >
              <div class="caption">
                <h4><%= post.name %></h4>
              </div>
              <p>
                  <a href="#" class="btn btn-success btn-sm moreinfo">More Info</a>
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>


  </body>
</html>
