<!DOCTYPE html>
<html>
    <head>
        <%- include head_commons.ejs %>      
        <link rel="stylesheet" href="../stylesheets/date_picker.css">
    </head>
    <body>

        <%- include body_header.ejs %>      

        <div class="container" id="center">
            <% if(pets && pets.length != 0 ) { %>
                <form action="/owner/new_job_post_upload" method="POST" id="main_form">
                    <div class="container container1">
                        <h4>Please list the categories of pets you have</h4>
                        <hr/>
                        <% for(var i=0; i<pets.length; i++) { %>
                            <div class="jumbotron" style="padding: 5px 0 0 5px;">

                                <h3>
                                <input type="checkbox" name="PetIDs" value="<%= pets[i]._id %>"/>
                                <img src="<%= pets[i].getPhotoUrl() %>" style="width:10%; height: 10%"/>
                                <%= pets[i].name %></h3>
                            <br>    

                            </div>
                        <% } %>
                        <hr/>
                        <h4>Please select your preferred start and end date</h4>
                        <hr/>
                    </div>
                    <input type="text" name="start_date" id="start_date" value="" hidden/>
                    <input type="text" name="end_date" id="end_date" value="" hidden/>
                    <%- include date_picker.ejs %>
                    <%- include location_picker.ejs %>
                    <div class="container container1">
                        <hr/>
                        <h4>Please add a description of your post</h4>
                        <hr/>
                        <textarea name="description" id="area1" cols="60" rows="10" form="main_form"></textarea>
                        <hr/>
                        <h4>Select the addon selections</h4>
                        <hr/>
                        <input type="checkbox" name="addons" value="Walking" />Walking<br>
                        <input type="checkbox" name="addons" value="Grooming" />Grooming<br>
                        <input type="checkbox" name="addons" value="Music" />Music<br>
                    </div>
                    <button class="btn btn-primary" id="submit_button">Submit</button>      
                </form>
            <% } else { %>
                <div class="jumbotron">
                    You do not have any pet's defined, you may define some from <a href="/owner/store_pet" >here.</a>
                </div>
            <% } %>
        </div>

        <script src="../javascripts/job_post.js"></script>
    </body>
</html>
