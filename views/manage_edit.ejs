<!DOCTYPE html>
<html>
    <head>
        <%- include head_commons.ejs %>      
        <link rel="stylesheet" href="../stylesheets/manage.css">
    </head>
    <body>

        <%- include body_header.ejs %> 
		
		<div class="container" id="mainContent">
			<form action="/manage/edit" method="POST" id="main_form">
				<input name="myImage" type="file" value="upload your profile photo">
				<h3>Edit your profile</h3>
				<hr/>
				<div class="row listContent">
					<div class="col-md-6">
						<h4>First Name</h4>
						<input type="text" class="form-control" name="firstName" 
						value="<%= currentUser.firstName %>">
					</div>
					<div class="col-md-6">
						<h4>Last Name</h4>
						<input type="text" class="form-control" name="lastName" 
						value="<%= currentUser.lastName %>">
					</div>
				</div>
				<div class="listContent">
					<h4>Email</h4>
					<input type="text" class="form-control" name="email" 
					value="<%= currentUser.email %>">
				</div>
				<div class="listContent">
					<h4>Bio</h4>
					<textarea name="description" id="area1" cols="60" rows="10" 
					form="main_form" value="<%= currentUser.description %>"></textarea>
				</div>
				
				<input type="submit" class="btn btn-primary" value="Save">
			</form>
		</div>
        
    </body>
</html>

